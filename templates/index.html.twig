{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<div class="card-columns">
    <div class="card">
        <div class="card-header">
            Make orders
        </div>
        <div class="card-body">
            <div class="d-flex flex-column">
                <div class="p-2">
                    <a href="{{ path('flower') }}" class="btn btn-warning">Order flowers</a>
                </div>
                <div class="p-2">
                    <a href="{{ path('coffee') }}" class="btn btn-warning">Order coffee</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            Get orders
        </div>
        <div class="card-body">
            <div class="d-flex flex-column">
                <div class="p-2">
                    <a target="_blank" href="{{ path('get_order_list', { 'type': 'json' }) }}" class="btn btn-primary">Get orders JSON</a>
                </div>
                <div class="p-2">
                    <a target="_blank" href="{{ path('get_order_list', { 'type': 'xml' }) }}" class="btn btn-primary">Get orders XML</a>
                </div>
            </div>
        </div>
    </div>
    {% if app.session.flashbag.peekAll() is not empty %}
        <div class="card">
            <div class="card-header">
                Messages
            </div>
            <div class="card-body">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
