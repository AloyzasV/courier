{% extends 'base.html.twig' %}

{% block title %}Order flowers{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        Order flowers
    </div>
    <div class="card-body">
        {{ form_start(form, {'action': path('flower') }) }}
        {{ form_row(form.address) }}
        {{ form_row(form.name) }}
        {{ form_row(form.deliverOn) }}
        {{ form_row(form._token) }}

        <button type="submit" class="btn btn-primary">Order</button>
        <a href="{{ path('home_page') }}" class="btn btn-warning">Back</a>
        
        {{ form_end(form) }}
    </div>
</div>


{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        jQuery('#flower_order_form_deliverOn').datetimepicker({
            format:'Y-m-d H:i',
            minDate:'-1970/01/01',
            step:10
        });
    </script>
{% endblock %}